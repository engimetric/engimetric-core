{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@middleware/*": ["middleware/*"],
            "@routes/*": ["routes/*"]
        },
        "sourceMap": true,
        "inlineSources": true,
        "moduleResolution": "node",
        "types": ["node", "express"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
